{
  "name": "sprint-pulse-monorepo",
  "private": true,
  "scripts": {
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "dev": "pnpm -r dev",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "serve:api": "npx supabase functions serve api",
    "get-token": "deno run -A ./supabase/get-token.ts",
    "type-check:api": "cd supabase/functions && deno task check",
    "type-check:shared": "pnpm --filter @sprintpulse/shared exec tsc --noEmit",
    "type-check": "pnpm run type-check:api && pnpm run type-check:shared",
    "deploy:db": "npx supabase db push",
    "deploy:api": "npx supabase functions deploy api",
    "deploy": "pnpm run deploy:db && pnpm run deploy:api"
  },
  "devDependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@supabase/supabase-js": "^2.94.1",
    "supabase": "^2.76.8",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "hono": "^4.11.7"
  }
}
